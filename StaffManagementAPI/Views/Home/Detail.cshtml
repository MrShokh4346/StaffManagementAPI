@model HomeDetailViewModel

@{
    ViewBag.Title = "Staff Details";
    // var photoFilePath = "~/images/" + (Model.Staff.PhotoFilePath ?? "user.jpg");
    var photoFilePath = Url.Content("~/images/" + (Model.Staff.PhotoFilePath ?? "user.jpg"));

}

<div class="row justify-content-center m-3">
    <div class="col-sm-10 col-md-7 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header text-center">
                <h2 class="h4 mb-0">@Model.Staff.FirstName @Model.Staff.LastName</h2>
            </div>

            <div class="card-body text-center">
                <img src="@photoFilePath" class="card-img-top"  asp-append-version="true" />

                <p class="mb-1"><strong>Staff ID:</strong> @Model.Staff.Id</p>
                <p class="mb-1"><strong>Email:</strong> @Model.Staff.Email</p>
                <p><strong>Department:</strong> @Model.Staff.Department</p>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a asp-controller="home" asp-action="update" asp-route-Id="@Model.Staff.Id" class="btn btn-secondary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>



@section Scripts
{
    <script src="~/scripts/script1.js"></script>
}
