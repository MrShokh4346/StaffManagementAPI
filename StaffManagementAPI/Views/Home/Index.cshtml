@model HomeIndexViewModel

@{
    ViewBag.Title = "Staff List";
}
<br />
<br />
<div class="container">
    <div class="row">
        @foreach (var staff in Model.Staffs)
        {
            @* var photoFilePath = "~/images/" + (staff.PhotoFilePath ?? "user.jpg"); *@
            var photoFilePath = Url.Content("~/images/" + (staff.PhotoFilePath ?? "user.jpg"));

            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
                    <div class="card-header">
                        <h5 class="card-title">@staff.FirstName @staff.LastName</h5>
                    </div>
                    <img class="card-img-top" src="@photoFilePath" alt="User image" asp-append-version="true">
                    <div class="card-footer text-center">
                        <a asp-controller="home" asp-action="detail" asp-route-Id="@staff.Id" class="btn btn-primary">View</a>
                        <a asp-controller="home" asp-action="update" asp-route-Id="@staff.Id" class="btn btn-primary">Edit</a>
                        <a asp-controller="home" asp-action="delete" asp-route-Id="@staff.Id" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>